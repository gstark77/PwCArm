{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "devEnvironment": {
      "type": "string",
      "defaultvalure": "No",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "description": "Will the application or suite of applications require a dev environment?"
      }
    },
    "testEnvironment": {
      "type": "string",
      "defaultvalure": "No",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "description": "Will the application or suite of applications require a dev environment?"
      }
    },
    "webTier": {
      "type": "string",
      "defaultvalue": "No",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "description": "Will the application require an web tier?"
      },
    },
    "appTier": {
      "type": "string",
      "defaultvalue": "No",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "description": "Will the application require an app tier?"
      },
    },
        "appContainer": {
          "type": "string",
          "minLength": 1,
          "allowedValues": [
            "abc",
            "def",
            "ghi",
            "jkl",
            "mno",
            "pqr"
          ],
          "metadata": {
            "description": "The application that you are creating resources for"
          }
        },
        "networkBase": {
          "type": "string",
          "minLength": 7,
          "maxLength": 15,
          "metadata": {
            "description": "Enter the base network for the network container"
          }
        }
      },