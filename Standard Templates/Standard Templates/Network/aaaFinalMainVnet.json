{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
  },

  "variables": {
    "templateBaseUrl": "https://raw.githubusercontent.com/gstark77/PwCArm/master/Standard%20Templates/Standard%20Templates/Network/aaaFinalVnetLinked.json",
    "vnetTemplateFolderPath": "Network/",
    "vnetTemplateFileName": "aaaFinalVnetLinked.json",
    "snetTemplateFileName": "aaaFinalSnetLinked.json",

    "arrEnvironment": "[concat('dev')]",
    "strVnetName": "edw",
    "strVnetPrefix": "10.60.0.0",
    "strSnetName": "[concat('web','app','dba')]",
    "strSnetPrefix": "[concat('10.60.0.0','10.60.1.0','10.60.2.0')]",
    "strDnsServer": "192.168.0.1"

  },
    "resources": [
        {
          "name": "testMain",
          "type": "Microsoft.Resources/deployments",
          "apiVersion": "2016-09-01",

          "copy": {
            "name": "vnetLoop",
            "count": "[length(variables('arrEnvironment'))]" 
          },       
           
          "properties": {
              "mode": "Incremental",
              "templateLink": {
                 "uri": "[variables('templateBaseUrl')]",
                  "contentVersion": "1.0.0.0"
              },
            "parameters": {
              "strEnvironment": { "value": "[variables('arrEnvironment')[copyIndex()]]" }, /* dev   |   prd   */
              "strVnetName": { "value": "[variables('strVnetName')]" },   /*  edw  */
              "strVnetPrefix": { "value": "[variables('strVnetPrefix')]" },  /*  10.60.0.0   */
              "strSnetName": { "value": "[variables('strSnetName')]" },   /* web   |   app   |   dba   */
              "strSnetPrefix": { "value": "[variables('strSnetPrefix')]" },  /* 10.60.0.0  |  10.60.1.0  |  10.60.2.0  */
              "strDnsServer": { "value": "[variables('strDnsServer')]" }  /* 192.168.0.1   */
            }
          }
        }
    ],
    "outputs": {
    }
}
