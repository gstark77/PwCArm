{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "strEnvironment": { "type": "string" },  /*  dev  | prd  */
    "strApplication": { "type": "string" }, /* edw */
    "strVnetPrefix": { "type": "string" }, /* 10.60.0.0 */
    "strSnetTierName": { "type": "string" }, /* web   |   app   |   dba   */
    "strSnetTierPrefix": { "type": "string" }, /* 10.60.0.0  | 10.60.1.0  |  10.60.2.0  */
    "strDnsServer": { "type": "string" } /* 192.168.0.1 */


  },
  "variables": {
  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[concat('vnet-',parameters('strApplication'),parameters('strEnvironment'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            /*"[concat(parameters('strVnetPrefix'),'/21')]"*/
            "10.60.0.0/21"
          ]
        },
        "subnets": [
          {
            "name": "[concat('snet-',parameters('strApplication'), parameters('strEnvironment'), parameters('strSnetTierName'))]",
            "properties": {
              "addressPrefix": "[concat(parameters('strSnetTierPrefix'),'/24')]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
  }
}
