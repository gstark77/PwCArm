{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "strEnvironment": { "type": "string" }, 
    "strApplication": { "type": "string" }, 
    "strVnetPrefix": { "type": "string" }, 
    "strSnetTierName": { "type": "string" },
    "strSnetTierPrefix": { "type": "string" }, 
    "strDnsServer": { "type": "string" } 


  },
  "variables": {
  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[concat('vnet-',parameters('strApplication'),parameters('strEnvironment'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.60.0.0/21"
          ]
        },
        "subnets": [
          {
            "name": "[concat('snet-',parameters('strApplication'), parameters('strEnvironment'), parameters('strSnetTierName'))]",
            "properties": {
              "addressPrefix": "[concat(parameters('strSnetTierPrefix'),'/24')]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
  }
}
