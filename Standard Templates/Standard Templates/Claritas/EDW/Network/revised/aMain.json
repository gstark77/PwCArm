{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "vnet-edwdev",
      "metadata": {
        "description": "This is your Virtual Network"
      }
    },
    "addressPrefix": {
      "type": "string",
      "defaultValue": "10.100.32.0/21",
      "metadata": {
        "description": "The CIDR address space for your Virtual Network in Azure"
      }
    },
    "WebSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.100.32.0/24",
      "metadata": {
        "description": "This is CIDR prefix for the Web Subnet"
      }
    },
    "AppSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.100.33.0/24",
      "metadata": {
        "description": "This is CIDR prefix for the Application Subnet"
      }
    },
    "DBASubnetPrefix": {
      "type": "string",
      "defaultValue": "10.100.34.0/24",
      "metadata": {
        "description": "This is CIDR prefix for the Database Subnet"
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('virtualNetworkName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "snet-edwdevweb",
            "properties": {
              "addressPrefix": "[parameters('WebSubnetPrefix')]"
            }
          },
          {
            "name": "snet-edwdevapp",
            "properties": {
              "addressPrefix": "[parameters('AppSubnetPrefix')]"
            }
          },
          {
            "name": "DBASubnetName",
            "properties": {
              "addressPrefix": "[parameters('DBASubnetPrefix')]"
            }
          }
        ]
      }
    }
  ]
}