{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachines_vdiprdapp01_adminPassword": {
      "defaultValue": null,
      "type": "securestring"
    }
  },
  "variables": {
    "vmNamePrefix": "vdiprdapp",

    /*  
    +---------------------------------------------------------------------------------------------------------+
    |  Set the 'numberOfInstance' to the total number of VM's you want to create (e.g. '5' would create 5 VMs |
    +---------------------------------------------------------------------------------------------------------+*/
    "numberOfInstances": 1,

    /*  
    +---------------------------------------------------------------------------------------------------------+
    |  This would be the starting 'number' of the first host name (e.g. vdiprdappXX where XX is the offset    |
    +---------------------------------------------------------------------------------------------------------+*/
    "offset": 1,

    /*  
    +---------------------------------------------------------------------------------------------------------+
    |  Set the IP of the fist VM that will be created.  The IP address will increment by 1 in the fourth      |
    |  quandrant (e.g. vm1 address is x.x.x.A, vm2 address is x.x.x.(A+1), vm3 address is x.x.x.(A_2), etc.   |
    +---------------------------------------------------------------------------------------------------------+*/
    "startIP": "10.103.49.20",

    /*  
    +---------------------------------------------------------------------------------------------------------+
    |  General network configurations including avaialble set, virtual network and subnet names               |
    +---------------------------------------------------------------------------------------------------------+*/
    "availabilitySet": "vdiprdapp-as01",
    "vnetName": "vnet-vdiprd",
    "subnetName": "snet-vdiprdapp",


    "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', variables('subnetName'))]",
    "ipArray": "[split(variables('startIP'), '.')]",
    "ipFirst3": "[concat(variables('ipArray')[0], '.',variables('ipArray')[1], '.',variables('ipArray')[2], '.')]",
    "ipOct4": "[variables('ipArray')[3]]",
    "imageName": "VDI-Image"
  },
  "resources": [
    {
      "comments": "Generalized from resource: '/subscriptions/3c423771-3d30-4ba1-b4b0-74a2343689d4/resourceGroups/vdiprd/providers/Microsoft.Compute/virtualMachines/vdiprdapp01'.",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(variables('vmNamePrefix'), padleft(copyindex(3),2,'0'))]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[variables('numberOfInstances')]"
      },
        "apiVersion": "[providers('Microsoft.Compute','virtualMachines').apiVersions[0]]",
        "location": "centralus",
        "properties": {
          "availabilitySet": {
            "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('availabilitySet'))]"
          },
          "hardwareProfile": {
            "vmSize": "Standard_DS2_v2"
          },
          "storageProfile": {
            "imageReference": {
              "id": "[resourceId('Microsoft.Compute/images', variables('imageName'))]"
            }
          },
          "osProfile": {
            "computerName": "[concat(variables('vmNamePrefix'), padleft(copyindex(variables('offset')),2,'0'))]",
            "adminUsername": "claradmin",
            "windowsConfiguration": {
              "provisionVMAgent": true,
              "enableAutomaticUpdates": true
            },
            "secrets": [],
            "adminPassword": "[parameters('virtualMachines_vdiprdapp01_adminPassword')]"
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('vmNamePrefix'), padleft(copyindex(variables('offset')),2,'0'),'-nic1'))]"
              }
            ]
          }
        },
        "dependsOn": [
          //"[resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySets_vdiprdapp_as01_name'))]",
          // "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_vdiprddisks152_name'))]",
          // "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_vdiprddiag317_name'))]",
          //"[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaces_vdiprdapp01233_name'))]"
          "nicLoop"
        ]
      },
    {
      "comments": "Generalized from resource: '/subscriptions/3c423771-3d30-4ba1-b4b0-74a2343689d4/resourceGroups/vdiprd/providers/Microsoft.Network/networkInterfaces/vdiprdapp01233'.",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(variables('vmNamePrefix'), padleft(copyindex(variables('offset')),2,'0'),'-nic1')]",
      "apiVersion": "[providers('Microsoft.Network','networkInterfaces').apiVersions[0]]",
      "location": "centralus",
      "copy": {
        "name": "nicLoop",
        "count": "[variables('numberOfInstances')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",

            "properties": {
              "privateIPAddress": "[concat(variables('ipFirst3'),string(add(int(variables('ipOct4')), copyIndex())))]",
              "privateIPAllocationMethod": "Static",
              "subnet": {
                "id": "[variables('subnetRef')]"
              }
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": []
        },
        "enableIPForwarding": false
      },
      "dependsOn": [
        //"[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_vnet_vdiprd_name'))]"
      ]
    }
      /*,
    {
      "comments": "Generalized from resource: '/subscriptions/3c423771-3d30-4ba1-b4b0-74a2343689d4/resourceGroups/vdiprd/providers/Microsoft.Storage/storageAccounts/vdiprddiag317'.",
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "Storage",
      "name": "[parameters('storageAccounts_vdiprddiag317_name')]",
      "apiVersion": "2016-01-01",
      "location": "centralus",
      "tags": {},
      "properties": {},
      "dependsOn": []
    },
    {
      "comments": "Generalized from resource: '/subscriptions/3c423771-3d30-4ba1-b4b0-74a2343689d4/resourceGroups/vdiprd/providers/Microsoft.Storage/storageAccounts/vdiprddisks152'.",
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Premium_LRS",
        "tier": "Premium"
      },
      "kind": "Storage",
      "name": "[parameters('storageAccounts_vdiprddisks152_name')]",
      "apiVersion": "2016-01-01",
      "location": "centralus",
      "tags": {},
      "properties": {},
      "dependsOn": []
    }*/
    ]
  }